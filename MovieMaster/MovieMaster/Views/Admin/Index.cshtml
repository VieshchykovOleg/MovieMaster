@model IEnumerable<MovieMaster.Models.Movie>

@{
    ViewData["Title"] = "Admin Panel";
}

<h1>Admin Panel</h1>

<a href="@Url.Action("Create", "Admin")" class="btn btn-primary">Add New Movie</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.ID</td>
                <td>@movie.Title</td>
                <td>@movie.Release_Year</td>
                <td>@(movie.Genre_Name?.Genre_Name ?? "No Genre")</td>


                <td>
                    <a href="@Url.Action("Edit", "Admin", new { id = movie.ID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Admin", new { id = movie.ID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
