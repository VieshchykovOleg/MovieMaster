@model MovieMaster.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add New Movie</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Release_Year" class="control-label"></label>
        <input asp-for="Release_Year" class="form-control" />
        <span asp-validation-for="Release_Year" class="text-danger"></span>
    </div>

    <select asp-for="Genre_ID" class="form-control">
        <option value="">Select Genre</option>
        @if (ViewBag.Genres != null)
        {
            foreach (var genre in ViewBag.Genres as List<Genre>)
            {
                <option value="@genre.ID">@genre.Genre</option>
            }
        }
    </select>

    </div>

    <div class="form-group">
        <label asp-for="Txt_Description" class="control-label"></label>
        <textarea asp-for="Txt_Description" class="form-control"></textarea>
        <span asp-validation-for="Txt_Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
