@using System.Linq
@using Microsoft.AspNetCore.Http
@model IEnumerable<MovieMaster.Models.Movie>

<h1>Movies List</h1>

<!-- Форма фільтрації -->
<form method="get" class="form-inline mb-4">
    <div class="form-group">
        <label for="title" class="mr-2">Title:</label>
        <input type="text" id="title" name="title" class="form-control" value="@Context.Request.Query["title"]" />
    </div>
    <div class="form-group ml-3">
        <label for="releaseYear" class="mr-2">Release Year:</label>
        <input type="number" id="releaseYear" name="releaseYear" class="form-control" value="@Context.Request.Query["releaseYear"]" />
    </div>
    <div class="form-group ml-3">
        <label for="rating" class="mr-2">Rating:</label>
        <select id="rating" name="rating" class="form-control">
            <option value="">All</option>
            @for (int i = 10; i >= 1; i--)
            {
                <option value="@i" selected="@(Context.Request.Query["rating"] == i.ToString())">@i</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary ml-3">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Average Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Release_Year</td>
                <td>@movie.Genre</td>
                <td>@movie.Txt_Description</td>
                <td>
                    @if (movie.Comments != null && movie.Comments.Any())
                    {
                        var averageRating = movie.Comments.Average(c => c.Rating) / 10;
                        <p>Середній рейтинг: @averageRating.ToString("0.0")</p>
                    }
                    else
                    {
                        <em>Немає оцінок</em>
                    }
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Details", "Movies", new { id = movie.ID })" class="btn btn-primary">Залишити відгук</a>
                    }
                    else
                    {
                        <p>Увійдіть, щоб залишити відгук.</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
